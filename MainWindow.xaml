<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stanowisko_obsługi_kelnerskiej" x:Class="Stanowisko_obsługi_kelnerskiej.MainWindow"
        mc:Ignorable="d"
        
        Title="Restauracja++" Height="560" Width="1000" WindowStyle="None" Background="#FF252525" BorderBrush="#FF121212" BorderThickness="2" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Window.Resources>

        <ControlTemplate x:Key="ButtonExit" TargetType="{x:Type Button}">
            <TextBlock Text="X" TextAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Segoe Script" x:Name="xBttnTxt" Foreground="Black" FontWeight="Bold" TextDecorations="{x:Null}"/>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="xBttnTxt" Property="Margin" Value="0,1,1,0" />
                    <Setter TargetName="xBttnTxt" Property="Foreground" Value="DarkGray" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="ButtonMinimalize" TargetType="{x:Type Button}">
            <TextBlock Text="-" TextAlignment="Center" VerticalAlignment="Center"  FontSize="40" FontFamily="Segoe Script" x:Name="xBttnTxt" Foreground="Black" FontWeight="Bold" TextDecorations="{x:Null}"/>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="xBttnTxt" Property="Margin" Value="0,1,1,0" />
                    <Setter TargetName="xBttnTxt" Property="Foreground" Value="DarkGray" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="ButtonMaximalize" TargetType="{x:Type Button}">
            <TextBlock Text="□" TextAlignment="Center" VerticalAlignment="Center" FontSize="30" FontFamily="Segoe Script" x:Name="xBttnTxt" Foreground="Black" FontWeight="Normal" TextDecorations="{x:Null}" Padding="0,0,0,3"/>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="xBttnTxt" Property="Margin" Value="0,1,1,0" />
                    <Setter TargetName="xBttnTxt" Property="Foreground" Value="DarkGray" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="ButtonControlTemp" TargetType="{x:Type Button}">
            <Border BorderThickness="1" BorderBrush="#FF121212" CornerRadius="0" x:Name="ButtonBorder"  >
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="LightGray" Offset="0"/>
                        <GradientStop Color="Gray" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <TextBlock x:Name="txtBlock" TextAlignment="Center" FontSize="20" FontFamily="Constantia" Padding="2.5" Foreground="DimGray" VerticalAlignment="Center" FontWeight="Bold"><InlineUIContainer>                     
                        <ContentPresenter />
                    </InlineUIContainer></TextBlock>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="ButtonBorder" Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="Gray" Offset="0"/>
                                <GradientStop Color="DimGray" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="txtBlock" Property="Foreground" Value="lightgray"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter TargetName="ButtonBorder" Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="#FF515151" Offset="0"/>
                                <GradientStop Color="#FF3C3C3C" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="txtBlock" Property="Foreground" Value="lightgray"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Style x:Key="RadioButtonControlZamowienie" TargetType="{x:Type RadioButton}">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="FocusVisualStyle" Value="{DynamicResource RadioButtonFocusVisual}" />
            <Setter Property="FontFamily" Value="Constantia"/>
            <Setter Property="FontSize" Value="25" />
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#FF2C2C2C"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="20,5"/>
            <Setter Property="Padding" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <BulletDecorator Background="Transparent">
                            <BulletDecorator.Bullet>
                                <Grid Width="25" Height="25">
                                    <Rectangle
                                x:Name="Border"                                
                                RadiusX="5"
                                RadiusY="5"                                
                                >
                                        <Rectangle.Fill>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="LightGray" Offset="0"/>
                                                <GradientStop Color="Gray" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <Rectangle
                                x:Name="centerRectangle"
                                
                                        RadiusX="5"
                                        RadiusY="5"
                                Fill="DimGray"
                                Visibility="Visible"
                                Margin="3"
                                />
                                    <TextBlock
                                x:Name="CheckMark"                               
                                Text="X"      
                                        Foreground="LightGray"
                                Visibility="Collapsed"
                                Margin="5" FontFamily="Segoe Print" FontWeight="Bold" FontSize="14" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Center"
                                />
                                </Grid>
                            </BulletDecorator.Bullet>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="MouseOver" />
                                    <VisualState x:Name="Pressed" />
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames
                                        Storyboard.TargetName="centerRectangle"
                                        Storyboard.TargetProperty="Fill.Color"
                                        >
                                                <DiscreteColorKeyFrame KeyTime="0" Value="Red" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked" >
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames
                                        Storyboard.TargetName="CheckMark"
                                        Storyboard.TargetProperty="(UIElement.Visibility)"
                                        >
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked" />
                                    <VisualState x:Name="Indeterminate" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter
                        Margin="4,0,0,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        RecognizesAccessKey="True"
                        />
                        </BulletDecorator>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RadioButtonControlZamowienieStoliki" TargetType="{x:Type RadioButton}">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="FocusVisualStyle" Value="{DynamicResource RadioButtonFocusVisual}" />
            <Setter Property="FontFamily" Value="Arial Rounded MT Bold"/>
            <Setter Property="FontSize" Value="25" />
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="BorderBrush" Value="#FF2C2C2C"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="20,5"/>
            <Setter Property="Padding" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">                        
                        <BulletDecorator Background="Transparent">
                            <BulletDecorator.Bullet>
                                <Grid Width="25" Height="25">
                                    <Rectangle
                                x:Name="Border"                                
                                RadiusX="5"
                                RadiusY="5"                                
                                >
                                        <Rectangle.Fill>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="LightGray" Offset="0"/>
                                                <GradientStop Color="Gray" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <Rectangle
                                x:Name="centerRectangle"
                                
                                        RadiusX="5"
                                        RadiusY="5"
                                Fill="DimGray"
                                Visibility="Visible"
                                Margin="3"
                                />
                                    <TextBlock
                                x:Name="CheckMark"                               
                                Text="X"      
                                        Foreground="LightGray"
                                Visibility="Collapsed"
                                Margin="5" FontFamily="Segoe Print" FontWeight="Bold" FontSize="14" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Center"
                                />
                                </Grid>
                            </BulletDecorator.Bullet>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="MouseOver" />
                                    <VisualState x:Name="Pressed" />
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimationUsingKeyFrames
                                        Storyboard.TargetName="centerRectangle"
                                        Storyboard.TargetProperty="Fill.Color"
                                        >
                                                <DiscreteColorKeyFrame KeyTime="0" Value="Red" />
                                            </ColorAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked" >
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames
                                        Storyboard.TargetName="CheckMark"
                                        Storyboard.TargetProperty="(UIElement.Visibility)"
                                        >
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked" />
                                    <VisualState x:Name="Indeterminate" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter
                        Margin="4,0,0,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        RecognizesAccessKey="True"
                        />
                        </BulletDecorator>                        
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="BorderBrush" Value="#FF171717"/>
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Constantia"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Gray" Offset="0"/>
                        <GradientStop Color="DimGray" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Border}" x:Key="ButtonDisabled">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="Gray" Offset="0"/>
                                <GradientStop Color="DimGray" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="BttnTxtDisabled" TargetType="{x:Type TextBlock}">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Foreground" Value="LightGray" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="StolikBttn" TargetType="{x:Type Button}" >
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FFC97751" Offset="0"/>
                        <GradientStop Color="SaddleBrown" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Arial Rounded MT Bold"/>
            <Setter Property="Foreground" Value="#FF555555"/>
            <Setter Property="FontSize" Value="40"/>            
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Lime" Offset="0"/>
                        <GradientStop Color="Green" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="5"/>
        </Style>
        <local:StanowiskoKelnerskie x:Key="stanowiskoKelnerskie"/>

    </Window.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Grid.Row="0" Background="#FF171717" MouseDown="Drag_OnMouseDown">
            <Border BorderBrush="#FF0F0F0F" BorderThickness="0,0,0,2">
                <Grid >
                    <TextBlock HorizontalAlignment="Left" Margin="10,0.636,0,2.636" TextWrapping="Wrap" Text="Restauracja++" VerticalAlignment="Center" TextAlignment="Center" FontSize="16" FontFamily="Nirmala UI" Foreground="DarkGray" FontWeight="Bold"/>
                    <Button Content="Button" HorizontalAlignment="Right" Margin="2.5,0" Click="Exit_OnClick" VerticalAlignment="Center" Width="20" Height="20" Template="{DynamicResource ButtonExit}"/>
                    <Button Content="Button" HorizontalAlignment="Right" Margin="32.5,0" Click="Maximize_OnClick" VerticalAlignment="Center" Width="20" Height="20" Template="{DynamicResource ButtonMaximalize}"/>
                    <Button Content="Button" HorizontalAlignment="Right" Margin="62.5,0" Click="Minimalize_OnClick" VerticalAlignment="Center" Width="20" Height="20" Template="{DynamicResource ButtonMinimalize}"/>
                </Grid>
            </Border>
        </Grid>
        <Border Grid.Row="1" BorderThickness="0,0,0,2" BorderBrush="#FF0F0F0F" >
            <Grid Grid.ColumnSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="NewOrderMenuBttn" Grid.Column="0" Content="Nowe zamówienie" VerticalAlignment="Stretch" Click="NewOrder_OnClick" AutomationProperties.Name="NewOrderBttn" Template="{DynamicResource ButtonControlTemp}"/>
                <Button x:Name="RestaurantMenuBttn" Grid.Column="1"  Content="Restauracja"  VerticalAlignment="Stretch" Click="Restaurant_OnClick" AutomationProperties.Name="RestaurantBttn" Template="{DynamicResource ButtonControlTemp}"/>
                <Button x:Name="ColectMenuBttn" Grid.Column="2" Content="Odbiór własny" VerticalAlignment="Stretch"  Click="Colect_OnClick" AutomationProperties.Name="ColectBttn" Template="{DynamicResource ButtonControlTemp}"/>
                <Button x:Name="DeliveryMenuBttn" Grid.Column="3" Content="Dostawa" VerticalAlignment="Stretch"  Click="Delivery_OnClick" AutomationProperties.Name="DeliveryBttn" Template="{DynamicResource ButtonControlTemp}"/>
            </Grid>
        </Border>
        <Grid x:Name="HomePage" Grid.Row="2" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Grid.ColumnSpan="2" d:IsHidden="True">
            <Image HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Source="Title.png" />
        </Grid>
        <Grid x:Name="NoweZamowienie" Grid.Row="2" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Grid.ColumnSpan="2" d:IsHidden="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="HeaderNewOrder" Background="#FF424242" VerticalAlignment="Top" Height="30" BorderThickness="0,0,2,2" BorderBrush="#FF121212" >
                <Grid x:Name="Header" HorizontalAlignment="Stretch"  Margin="0,0,0,0" VerticalAlignment="Stretch" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=idColumn}" />

                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=kategoriaColumn}"/>
                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=nazwaColumn}"/>
                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=rozmiarColumn}"/>
                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=cenaColumn}"/>
                        <ColumnDefinition Width="{Binding ActualWidth, ElementName=iloscColumn}"/>

                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Text="Nr" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="22" FontFamily="Constantia" Foreground="Gray" FontWeight="Bold" FontStyle="Italic" TextDecorations="{x:Null}"/>
                    <TextBlock Grid.Column="2" Text="Kategoria" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="22" FontFamily="Constantia" Foreground="Gray" FontWeight="Bold" FontStyle="Italic" TextDecorations="{x:Null}"/>
                    <TextBlock Grid.Column="3" Text="Nazwa" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="22" FontFamily="Constantia" Foreground="Gray" FontWeight="Bold" FontStyle="Italic" TextDecorations="{x:Null}"/>
                    <TextBlock Grid.Column="4" Text="Rozmiar" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="22" FontFamily="Constantia" Foreground="Gray" FontWeight="Bold" FontStyle="Italic" TextDecorations="{x:Null}"/>
                    <TextBlock Grid.Column="5" Text="Cena" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="22" FontFamily="Constantia" Foreground="Gray" FontWeight="Bold" FontStyle="Italic" TextDecorations="{x:Null}"/>
                    <TextBlock Grid.Column="6" Text="Ilość" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="22" Foreground="Gray" FontFamily="Constantia" FontWeight="Bold" FontStyle="Italic" TextDecorations="{x:Null}"/>
                </Grid>
            </Border>
            <DataGrid x:Name="OrderListGrid" SelectionChanged="RowChange_OnChange" Grid.Column="0" EnableRowVirtualization="True" RowDetailsVisibilityMode="VisibleWhenSelected" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Background="#FF252525" RowHeight="25" IsReadOnly="True" Visibility="Visible" GridLinesVisibility="None" FontSize="24" Foreground="Black" BorderBrush="#FF121212" BorderThickness="0,0,2,0" SelectionMode="Single" CanUserResizeRows="False" Grid.ColumnSpan="1" Margin="0,30,0,30" HeadersVisibility="None" CanUserReorderColumns="False" AutoGenerateColumns="False">

                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="Margin" Value="1,1,1,0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type DataGridRow}">
                                    <Border CornerRadius="5" BorderThickness="1" Height="auto" Padding="5,5" Margin="1" x:Name="RowBorder" >
                                        <Border.BorderBrush>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FF5F5F5F" Offset="0"/>
                                                <GradientStop Color="Black" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.BorderBrush>
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                                <GradientStop Color="LightGray" Offset="0"/>
                                                <GradientStop Color="Gray" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <SelectiveScrollingGrid VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <SelectiveScrollingGrid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </SelectiveScrollingGrid.ColumnDefinitions>
                                            <SelectiveScrollingGrid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="*" />
                                            </SelectiveScrollingGrid.RowDefinitions>
                                            <DataGridCellsPresenter Grid.Column="1" x:Name="Content"
                                                ItemsPanel="{TemplateBinding ItemsPanel}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="Black" MinHeight="30" />
                                            <DataGridDetailsPresenter Grid.Column="1"
                                                Grid.Row="1"
                                                SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                Visibility="{TemplateBinding DetailsVisibility}" />
                                            <DataGridRowHeader Grid.RowSpan="2"
                                                SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                                                Visibility="{Binding HeadersVisibility, ConverterParameter={x:Static DataGridHeadersVisibility.Row}, Converter={x:Static DataGrid.HeadersVisibilityConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />
                                        </SelectiveScrollingGrid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="RowBorder" Property="Background" Value="#FFE0E0E0" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="RowBorder" Property="Background" >
                                                <Setter.Value>
                                                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                                        <GradientStop Color="DimGray" Offset="0"/>
                                                        <GradientStop Color="#FF444444" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter TargetName="Content" Property="Foreground" Value="black"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>

                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type DataGridCell}">
                                    <Border x:Name="border"  BorderThickness="0" VerticalAlignment="Center"  HorizontalAlignment="Center" >
                                        <ContentPresenter Height="auto"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="idColumn" Binding="{Binding nr}" Header="Nr" Width="auto" CanUserResize="False" Foreground="WhiteSmoke"/>
                    <DataGridTextColumn x:Name="kategoriaColumn" Binding="{Binding kategoria}" Header="Kategoria" Width="auto" CanUserResize="False" Foreground="WhiteSmoke"/>
                    <DataGridTextColumn x:Name="nazwaColumn" Binding="{Binding nazwa}" Header="Nazwa" Width="auto" CanUserResize="False" Foreground="WhiteSmoke"/>
                    <DataGridTextColumn x:Name="rozmiarColumn" Binding="{Binding rozmiar}" Header="Rozmiar" Width="auto" CanUserResize="False" Foreground="WhiteSmoke"/>
                    <DataGridTextColumn x:Name="cenaColumn" Binding="{Binding cenaSuma, StringFormat=\{0:N2\} zł.}" Header="Cena" Width="auto" CanUserResize="False" Foreground="WhiteSmoke"/>
                    <DataGridTextColumn x:Name="iloscColumn" Binding="{Binding ilosc, StringFormat={}{0} szt.}" Header="Ilość" Width="auto" CanUserResize="False" Foreground="WhiteSmoke"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <Button Template="{DynamicResource ButtonControlTemp}" Grid.Column="0" Content="Dodaj" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="30" Click="AddOrder_OnClick"/>
                <Button Template="{DynamicResource ButtonControlTemp}" Grid.Column="1" Content="Usuń" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="30" Click="DeleteOrder_OnClick"/>
            </Grid>
            <StackPanel Grid.Column="1"  Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,0,0,0" >
                <TextBlock Text="Rodzaj zamówienia" FontSize="40" Height="auto" VerticalAlignment="Top" HorizontalAlignment="Stretch" TextAlignment="Center" Foreground="Gray" FontWeight="Bold" FontFamily="Constantia"/>
